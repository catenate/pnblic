#!/usr/local/plan9/bin/rc

rm /tmp/keywords
files=`{ls 2010072*}
keywords=`{grep '^nb' $files /dev/null | sed 's,^[^:]+: ?nb ,,' | fmt -w 1 | sort | uniq -d }
worthy=`{echo $keywords | fmt -w 1 | grep -v '(command|compare|create|design|document|file|function|language|line|measure|process|programming|read|result|space|tool|video|work)'}
for(k in $worthy){
	count=`{grep '^nb ' $files | grep -c $k}
	echo $count^' '^$k
} >> /tmp/keywords
sort -n -r /tmp/keywords | uniq | awk '{print $2}' | fmt -w 1000 | sed 's,^,Recent http://j.mp/pnblic: ,'  | fmt -w 140
